@model WebApplication7.ViewModels.PaymentViewModel

<div class="payment-summary">
    <h2>Payment Summary</h2>

    <div class="payment-details">
        <p><strong>Total Amount:</strong> @Model.TotalAmount EGP</p>
        <p><strong>Number Of Guests:</strong> @Model.NumberOfGuests</p>
        <p><strong>Total Amount After Discount:</strong> @Model.TotalAmountAfterDiss EGP</p>
        <p><strong>Payment Code:</strong> @Model.PaymentCode</p>
        @if (Model.TotalDayes != null)
        {
            <p><strong>Total Dayes:</strong> @Model.TotalDayes</p>
        }
    </div>

    <form asp-action="Index" asp-controller="Payment" asp-route-price="@Model.TotalAmountAfterDiss" method="post">
        <input type="hidden" asp-for="TotalAmount" />
        <button type="submit" class="confirm-btn">Confirm Payment</button>
    </form>
</div>
<style>
    .payment-summary {
        background-color: #fff; /* White background for the payment summary */
        padding: 20px; /* Padding around the content */
        border-radius: 8px; /* Rounded corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
        max-width: 400px; /* Maximum width of the container */
        width: 100%; /* Full width for smaller screens */
        margin: 20px auto; /* Center the payment summary with margin */
    }

    h2 {
        text-align: center; /* Center the heading text */
        color: #333; /* Dark color for heading */
        margin-bottom: 20px; /* Space below the heading */
    }

    .payment-details p {
        font-size: 16px; /* Font size for details */
        margin-bottom: 10px; /* Space between paragraphs */
        color: #555; /* Slightly lighter color for details */
    }

        .payment-details p strong {
            color: #333; /* Dark color for strong text */
        }

    form {
        text-align: center; /* Center the form content */
    }

    .confirm-btn {
        background-color: #007bff; /* Blue background for button */
        color: white; /* White text color */
        padding: 10px 20px; /* Padding around button text */
        border: none; /* No border */
        border-radius: 5px; /* Rounded corners for button */
        font-size: 16px; /* Font size for button text */
        cursor: pointer; /* Pointer cursor on hover */
        transition: background-color 0.3s; /* Smooth background change on hover */
    }

        .confirm-btn:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }

</style>