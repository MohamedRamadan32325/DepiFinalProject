@model WebApplication7.ViewModels.PlaceViewModel
<div class="ad-container">
    <div class="text-container">
        <h1>@Model.SpecificPlace.Place_Name</h1>
        <h3>@Model.SpecificPlace.Place_City</h3>
        <p>@Model.SpecificPlace.Description</p>
        <p>@Model.SpecificPlace.Place_Rating</p>
        <p>@Model.SpecificPlace.Place_Price EGP</p>
        <div class="card-body">
            <a asp-action="Edit" asp-route-id="@Model.SpecificPlace.Place_Id" class="cta-button">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.SpecificPlace.Place_Id" class="cta-button" onclick="return confirmDelete()">Delete</a>
        </div>
    </div>
    <div class="image-container">
        @if (Model.SpecificPlace.imageSrc == null || Model.SpecificPlace.imageSrc == "")
        {
            <img src="\Images\no-image-found.jpg" alt="NOImage" />
        }
        else
        {
            <img src="@Model.SpecificPlace.imageSrc" alt="NOImage" />
        }
    </div>
</div>

<style>
    .ad-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 900px;
        width: 100%;
    }

    .text-container {
        max-width: 60%;
    }

        .text-container h1 {
            font-size: 24px;
            color: #333;
            margin-bottom: 10px;
        }

        .text-container p {
            font-size: 16px;
            color: #666;
            margin-bottom: 20px;
        }

    .cta-button {
        display: inline-block;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 16px;
        background-color: #d5c188;
        border-color: #d5c188;
        color: white;
    }

        .cta-button:hover {
            background-color: #a59056;
            border-color: #a59056;
            color: white;
        }

    .image-container img {
        max-width: 350px;
        border-radius: 10px;
    }
</style>

<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this place?");
    }
</script>
